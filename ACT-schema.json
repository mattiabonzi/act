{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$ref": "#/definitions/Container",
   "definitions": {
     "Metadata": {
       "type": "object",
       "patternProperties": {
         "^[A-Za-z0-9_]*$": {
           "anyOf": [
             {
               "type": "string"
             },
             {
               "type": "number"
             },
             {
               "type": "boolean"
             },
             {
               "type": "null"
             },
             {
               "type": "array",
               "items": {
                 "type": "string"
               }
             },
             {
               "type": "array",
               "items": {
                 "type": "number"
               }
             },
             {
               "type": "array",
               "items": {
                 "type": "boolean"
               }
             }
           ]
         }
       },
       "minProperties": 1
     },
     "Argument": {
       "type": "object",
       "properties": {
         "tipe": {
           "enum": [
             "text",
             "image",
             "video",
             "audio"
           ]
         },
         "value": {
           "anyOf": [
             {
               "type": "string"
             },
             {
               "type": "object",
               "format": "uri"
             }
           ]
         },
         "metadata": {
           "$ref": "#/definitions/Metadata"
         }
       },
       "required": [
         "tipe",
         "value"
       ],
       "additionalProperties": false
     },
     "Container": {
       "type": "object",
       "properties": {
         "content": {
           "oneOf": [
             {
               "type": "array",
               "minItems": 1,
               "items": {
                 "$ref": "#/definitions/Argument"
               }
             },
             {
               "type": "array",
               "minItems": 1,
               "items": {
                 "$ref": "#/definitions/Container"
               }
             }
           ]
         },
         "metadata": {
           "$ref": "#/definitions/Metadata"
         }
       },
       "required": [
         "content"
       ],
       "additionalProperties": false
     }
   }
 }